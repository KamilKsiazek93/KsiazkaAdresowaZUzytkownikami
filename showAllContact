void showAllContact(vector<Contact> friends)
{
    for (int i = 0; i < friends.size(); ++i)
    {
        cout << friends[i].id << '|';
        cout << friends[i].idOfUser << '|';
        cout << friends[i].name << '|';
        cout << friends[i].surname << '|';
        cout << friends[i].mail << '|';
        cout << friends[i].numberOfPhone << '|';
        cout << friends[i].address << '|' << endl;
    }
    system("pause");
}
